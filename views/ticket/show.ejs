<!DOCTYPE html>
<html lang="fr">
    <%- include('../shared/head', {css: ['details', 'navbar']}) %>
    <body>
        <%- include('../shared/navbar', {}) %>
        <div class="details">
            <h1>Details Ticket</h1>
            <h2>Id : <%= ticket.id %></h2>
            <h2>Titre : <%= ticket.title %></h2>
            <h2>Description : <%= ticket.description %></h2>
            <h2>Responsable : <%= ticket.responsible %></h2>
            <h2>Priorité : <%= ticket.priority %></h2>
            <h2>créé par : <%= ticket.createdBy %></h2>
            <h2>Comments:</h2>
            <div id="previous-comments" class="comments-list">
                <% ticket.comments.forEach(comment => { %>
                    <%- include('comment', { comment }) %>
                <% }); %>
            </div>
            <h2>Statut : <%= ticket.completed ? "completed" : "Open" %></h2>

            <div>
                Add comment: <input type="text" id="commentInput"><input type="button" id="addCommentButton" value="add">
            </div>
        </div>
    </body>
</html>